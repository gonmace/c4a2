---
import type { BlogPost } from '../types/blog';

interface Props {
  post: BlogPost;
}

const { post } = Astro.props;
---

<article class="bg-white rounded-lg shadow-lg overflow-hidden">
  <a href={post.url} class="block">
    {post.image && (
      <img 
        src={post.image.url} 
        alt={post.image.alt} 
        class="w-full h-48 object-cover"
      />
    )}
    <div class="p-6">
      <h2 class="text-2xl font-bold text-brand-dark mb-2">{post.title}</h2>
      <p class="text-gray-600 mb-4">{post.introduction}</p>
      
      <div class="flex flex-wrap gap-2 mb-4">
        {post.tags.map((tag) => (
          <span class="px-3 py-1 bg-lightShades text-brand rounded-full text-sm">
            {tag}
          </span>
        ))}
      </div>
      
      <div class="text-sm text-gray-500">
        {new Date(post.datePublished).toLocaleDateString('es-ES', {
          year: 'numeric',
          month: 'long',
          day: 'numeric'
        })}
      </div>
    </div>
  </a>
</article> 