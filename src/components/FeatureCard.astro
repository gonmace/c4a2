---
interface Props {
  icon: string;
  title: string;
  description: string;
}

const { icon, title, description } = Astro.props;
---

<div class="flex flex-col md:flex-row items-center gap-8">
  
  <div class="w-full">
    <div class="card bg-base-200 shadow-xl hover:shadow-2xl transition-all duration-300">
      <div class="card-body">
        <div class="text-4xl mb-4 text-primary">
          <i class={icon}></i>
        </div>
        <h2 class="card-title text-primary">{title}</h2>
        <p class="text-base-content">{description}</p>
      </div>
    </div>
  </div>

</div>